<h2 class="page-title">Department</h2>
<div class="body">
  <form action="/admin/create_department" method="post">
    <div class="form-group">
      <input
        type="text"
        name="name"
        class="form-control"
        placeholder="Add Department "
        required="true"
      />
      <button class="btn btn-primary save"><p>Save</p></button>
    </div>
  </form>
  <div class="inforBody">
    <table>
      <div>
        <thead>
          <tr>
            <th>Email</th>
            <th>Department</th>
            <th>Action</th>
          </tr>
        </thead>
        <% if(departments != ''){%> <% departments.forEach(function(department,
          index){ %>
        <tr>
          <td><%- index %></td>
          <td><%- department.department_name %></td>
          <td>
            <a
              href="/admin/department/<%- department._id %>"
              class="delete"
              onclick=""
            >
              <i class="fas fa-trash-alt"></i>
            </a>
          </td>
        </tr>
        <% }) %> <% } %>
      </div>
    </table>
  </div>

